{
    "request": {
        "method": "POST",
        "url": "/some/thing",
	"bodyPatterns" : [ {
      "matchesXPath" : {
         "expression": "//thing/text()",
         "contains": "Hello"
      }
    } ]
    },
    "response": {
        "status": 200,
        "body": "Hello world!",
        "headers": {
            "Content-Type": "text/plain"
        }
    }
}
